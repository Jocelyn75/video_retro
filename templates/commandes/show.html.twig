{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <h1>Commandes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ commande.userId }}</td>
            </tr>
            <tr>
                <th>Montant_total</th>
                <td>{{ commande.montantTotal }}</td>
            </tr>
            <tr>
                <th>Date_cmd</th>
                <td>{{ commande.dateCmd ? commande.dateCmd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut_cmd</th>
                <td>{{ commande.statutCmd }}</td>
            </tr>
            <tr>
                <th>Stripe_id</th>
                <td>{{ commande.stripeId }}</td>
            </tr>
            <tr>
                <th>Achat_ou_vente</th>
                <td>{{ commande.achatOuVente ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commandes_index') }}">back to list</a>

    <a href="{{ path('app_commandes_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commandes/_delete_form.html.twig') }}
{% endblock %}
