{% extends 'base.html.twig' %}

{% block title %}<title>Adresse de facturation - Video Retro</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    <nav style="--bs-breadcrumb-divider:'>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ms-3"><a class="aBreadCrumb" href="{{path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href=" {{path('app_profil')}}">Mon profil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mon adresse de facturation</li>
        </ol>
    </nav>

    <h1>Mon adresse de facturation</h1>
    <main class="container">{% block main %}
    
    {% for message in app.flashes("error")%}
        <div class="text-center alert alert-danger" role="alert">
            <p>{{message}}</p>
        </div>
    {% endfor %}  


        <div class="table-responsive">
            <table class="table table-bordered mb-5">
                <tbody>
                    <tr>
                        <th class="myPrimary">Prénom</th>
                        <td>{{ adr_facturation_user.prenom }}</td>
                    </tr>
                    <tr>
                        <th class="myPrimary bg-light">Nom</th>
                        <td class="bg-light">{{ adr_facturation_user.nom }}</td>
                    </tr>
                    </tr>
                        <th class="myPrimary bg-light">Adresse</th>
                        <td class="bg-light">{{ adr_facturation_user.adresse }}</td>
                    </tr>
                    <tr>
                        <th class="myPrimary">Complément d'adresse</th>
                        <td>{{ adr_facturation_user.complementAdr }}</td>
                    </tr>
                    <tr>
                        <th class="myPrimary bg-light">Code postal</th>
                        <td class="bg-light">{{ adr_facturation_user.codePostal }}</td>
                    </tr>
                    <tr>
                        <th class="myPrimary">Ville</th>
                        <td>{{ adr_facturation_user.ville }}</td>
                    </tr>
                </tbody>
            </table>
        </div>


    <div class="d-flex justify-content-between mb-5">
        <a class="btn bg-myPrimary text-white" href="{{ path('app_adr_facturation_user_edit', {'id': adr_facturation_user.id}) }}">Modifier</a>
    </div>
    
    {% endblock %}</main>
    {% include "_footer.html.twig" %}
{% endblock %}
