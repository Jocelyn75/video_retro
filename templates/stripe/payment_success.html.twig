{% extends 'base.html.twig' %}

{% block title %}<title>Paiement accepté</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}
    <main class="container">{% block main %}
        <h1>Paiement accepté</h1>
        <p class="text-center fst-italic mb-5">La facture vous a été envoyée par mail</p>

        <h2 class="my-3">Récapitulatif de la commande</h2>


        <h3 class="h3 my-3">Mon adresse de facturation</h3>
        <table class="table table-bordered mb-5">
            <tbody>
                <tr>
                    <th class="myPrimary bg-light">Nom</th>
                    <td class="bg-light">{{ commande.adrFacturationCmd.nom }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Prénom</th>
                    <td>{{ commande.adrFacturationCmd.prenom }}</td>
                </tr>
                <tr>
                    <th class="myPrimary bg-light">Adresse</th>
                    <td class="bg-light">{{ commande.adrFacturationCmd.adrFactCmd }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Complément d'adresse</th>
                    <td>{{ commande.adrFacturationCmd.complementAdr }}</td>
                </tr>
                <tr>
                    <th class="myPrimary bg-light">Code postal</th>
                    <td class="bg-light">{{ commande.adrFacturationCmd.codePostal }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Ville</th>
                    <td>{{ commande.adrFacturationCmd.ville }}</td>
                </tr>
            </tbody>
        </table>
        <h3 class="h3 my-3">Ma commande</h3>
        <table class="table table-bordered my-3">
            <thead>
                <tr>
                    {# <th>Produit</th> #}
                    <th class="myPrimary bg-light">Prix unitaire</th>
                    <th class="myPrimary bg-light">Quantité</th>
                    <th class="myPrimary bg-light">Total</th>
                </tr>
            </thead>
            <tbody>
                {% for detailCommande in detailsCommandes %}
                <tr>
                    {# <td>{{ detailCommande.stock.titre }}</td> #}
                    <td>{{ detailCommande.prixUnitaire }} €</td>
                    <td>{{ detailCommande.quantiteCmd }}</td>
                    <td>{{ detailCommande.prixUnitaire * detailCommande.quantiteCmd }} €</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <h3 class="h3 mt-3 mb-5">Montant total de la commande : {{ montantTotalCommande / 100 }} €</h3>

        <h3 class="h3 my-3">Mon adresse de livraison</h3>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="myPrimary bg-light">Nom</th>
                    <td class="bg-light">{{ commande.adrLivraisonCmd.nom }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Prénom</th>
                    <td>{{ commande.adrLivraisonCmd.prenom }}</td>
                </tr>
                <tr>
                    <th class="myPrimary bg-light">Adresse</th>
                    <td class="bg-light">{{ commande.adrLivraisonCmd.adrLivrCmd }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Complément d'adresse</th>
                    <td>{{ commande.adrLivraisonCmd.complementAdr }}</td>
                </tr>
                <tr>
                    <th class="myPrimary bg-light">Code postal</th>
                    <td class="bg-light">{{ commande.adrLivraisonCmd.codePostal }}</td>
                </tr>
                <tr>
                    <th class="myPrimary">Ville</th>
                    <td>{{ commande.adrLivraisonCmd.ville }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn bg-secondary text-white mb-5" href="{{ path('home') }}">Retour à l'accueil</a>


    {% endblock %}</main>
    {% include "_footer.html.twig" %}
{% endblock %}
