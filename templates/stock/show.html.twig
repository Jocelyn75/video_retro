{% extends 'base.html.twig' %}

{% block title %}<title>Produits - Video Retro</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    {# Fil d'Ariane #}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ms-3"><a class="aBreadCrumb" href="{{path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_admin_home')}}">Back office</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_stock_index')}}">Liste des produits</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ filmTitle }}</li>
        </ol>
    </nav>

    <h1>Produits</h1>
    <main class="container">{% block main %}
        <h2 class="text-center mb-5">{{ filmTitle }}</h2>

            <div class="table-responsive">
                <table class="table table-bordered mb-5">
                    <tbody>
                        <tr>
                            <th class="myPrimary bg-light">Id</th>
                            <td class="bg-light">{{ stock.id }}</td>
                        </tr>
                        <tr>
                            <th class="myPrimary">Format</th>
                            <td>{{ stock.formats.nomFormat }}</td>
                        </tr>
                        <tr>
                            <th class="myPrimary bg-light">Prix de revente (€)</th>
                            <td class="bg-light">{{ stock.prixReventeDefaut }}</td>
                        </tr>
                        <tr>
                            <th class="myPrimary">Quantité en stock</th>
                            <td>{{ stock.quantiteStock }}</td>
                        </tr>
                        <tr>
                            <th class="myPrimary bg-light">Id du film</th>
                            <td class="bg-light">{{ stock.filmsId }}</td>
                        </tr>

                        <tr>
                            <th class="myPrimary">Film API Id</th>
                            <td>{{ stock.films.filmsApiId }}</td>
                        </tr>

                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between mb-5">
                <a class="btn bg-myPrimary text-white" href="{{ path('app_stock_edit', {'id': stock.id}) }}">Modifier</a>
                {{ include('stock/_delete_form.html.twig') }}
            </div>

            <a class="btn bg-secondary text-white mb-5" href="{{ path('app_stock_index') }}">Retour à la liste</a>


    {% endblock %}</main>
    {% include "_footer.html.twig" %}
{% endblock %}
