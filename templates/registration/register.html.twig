{% extends 'base.html.twig' %}

{% block title %}<title>Inscription</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}
    <h1>Inscription</h1>
    <main class="container">{% block main %}

        {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(registrationForm.email,{'label_attr': {'class': 'mb-2'}})}}
                {{ form_row(registrationForm.plainPassword,{'label_attr': {'class': 'mb-3'}})}}
                {{ form_row(registrationForm.prenom,{
                    label: 'Prénom'
                }) }}
                {{ form_row(registrationForm.nom) }}

                {# {{ form_row(registrationForm.date_naiss, {
                    label: 'Date de naissance'
                }) }}

                {{ form_row(registrationForm.adr_user, {
                    label: 'Adresse'
                }) }}

                {{ form_row(registrationForm.complement_adr, {
                    label: 'Complément d\'adresse'
                }) }}

                {{ form_row(registrationForm.code_postal, {
                    label: 'Code postal'
                }) }}

                {{ form_row(registrationForm.ville, {
                    label: 'Ville'
                }) }}

                {{ form_row(registrationForm.tel_user, {
                    label: 'Numéro de téléphone'
                }) }} #}

                {{ form_row(registrationForm.agreeTerms, {
                    label: '<a href="' ~ path("app_cgu") ~ '">' ~ "Accepter les Conditions générales d'utilisation" ~ '</a>',
                    label_html: true
                }) }}

                <button type="submit" class="btn bg-myPrimary text-white w-100 mb-5">S'inscrire</button>
            {{ form_end(registrationForm) }}
    {% endblock %}</main>
    {% include "_footer.html.twig" %}
{% endblock %}


