{% extends 'base.html.twig' %}

{% block title %}<title>Modifier un utilisateur - Video Retro</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    {# Fil d'Ariane #}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ms-3"><a class="aBreadCrumb" href="{{path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_admin_home')}}">Back office</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_user_index')}}">Liste des utilisateurs</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_user_show', {'id': user.id})}}">Profil de {{ user.prenom }} {{ user.nom|upper }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier le profil de {{ user.prenom }} {{ user.nom|upper }}</li>
        </ol>
    </nav>

    <h1>Modifier un utilisateur</h1>

    <main class="container">{% block main %}

        {{ form_errors(form) }}
            {{ form_start(form) }}
                {{ form_row(form.email,{'label_attr': {'class': 'mb-2'}})}}
                {# {{ form_row(form.plainPassword,{'label_attr': {'class': 'mb-3'}})}} #}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom,{
                    label: 'Prénom'
                }) }}
                {{ form_row(form.date_naiss, {
                    label: 'Date de naissance'
                }) }} 
                {{ form_row(form.adr_user, {
                    label: 'Adresse'
                }) }}

                {{ form_row(form.complement_adr, {
                    label: 'Complément d\'adresse'
                }) }}

                {{ form_row(form.code_postal, {
                    label: 'Code postal'
                }) }}

                {{ form_row(form.ville, {
                    label: 'Ville'
                }) }}

                {{ form_row(form.tel_user, {
                    label: 'Numéro de téléphone'
                }) }}
                {{ form_row(form.roles, {
                    label: 'Rôles'
                }) }}

                <button type="submit" class="btn bg-myPrimary text-white w-100 mb-5">Enregistrer</button>

            {{ form_end(form) }}


                {# <button class="btn">{{ button_label|default('Valider') }}</button>#}

            <div class="d-flex justify-content-between mb-5">
                <a class="btn bg-secondary text-white mb-1" href="{{ path('app_user_index') }}">Retour à la liste</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>


    {% endblock %}</main>

    {% include "_footer.html.twig" %}

{% endblock %}
