{% extends 'base.html.twig' %}

{% block title %}<title>Modifier mon mot de passe</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ms-3"><a class="aBreadCrumb" href="{{path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href=" {{path('app_profil')}}">Mon profil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier mon mot de passe</li>
        </ol>
    </nav>
    <h1>Modifier mon mot de passe</h1>
    <main class="container">{% block main %}

        {{ form_errors(form) }}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(form.currentPassword,{label: 'Mot de passe actuel'})}}
                {{ form_row(form.newPassword,{label: 'Nouveau mot de passe'})}}
                {{ form_row(form.confirmPassword,{label: 'Confirmez votre nouveau mot de passe'})}}



            <button type="submit" class="btn bg-myPrimary text-white w-100">Modifier mon mot de passe</button>
        {{ form_end(form) }}
    {% endblock %}</main>
    {% include "_footer.html.twig" %}
{% endblock %}

