{# action est utilisée pour que lorsqu'on clique pour envoyer les données du formulaire, la destination soit la page search dont le nom est app_search, tel  que définis dans SearchController.php #}
{{form_start(form, {'attr': {'action': path('app_search'), 'class':'search-sm'}})}}
    {# Cette div permet de placer le widget (champ de saisie) et le bouton de recherche en ligne #}
    <div class="d-flex">
    {# On génère le widget pour le champ keyword du formulaire, et on le style. #}
    {{form_widget(form.keyword, {'attr': {'class': 'form-control me-1', 'placeholder': 'Rechercher un film', 'aria-label':'Rechercher un film'}})}}
    {# Bouton de lancement de la recherche #}
    <button class="btn btn-outline-light me-auto" type="submit" aria-label="Lancer la recherche"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
{{form_end(form)}}