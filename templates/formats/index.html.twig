{% extends 'base.html.twig' %}

{% block title %}<title>Liste des Formats - Video Retro</title>{% endblock %}

{% block body %}
    {% include '_header.html.twig' %}

    {# Fil d'Ariane #}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item ms-3"><a class="aBreadCrumb" href="{{path('home')}}">Accueil</a></li>
            <li class="breadcrumb-item"><a class="aBreadCrumb" href="{{path('app_admin_home')}}">Back office</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des formats</li>
        </ol>
    </nav>


    <h1>Liste des Formats</h1>

    <main class="container">{% block main %}

        <table class="table table-light table-bordered mb-5">

            <thead class="table-secondary">
                <tr class="table-secondary">
                    <th class="text-center myPrimary">Id</th>
                    <th class="text-center myPrimary">Nom du format</th>
                    <th class="text-center myPrimary">Prix de rachat (â‚¬)</th>
                    <th class="text-center myPrimary">Actions</th>
                </tr>
            </thead>

            <tbody>
            {% for format in formats %}
                <tr>
                    <td class="text-center">{{ format.id }}</td>
                    <td class="text-center">{{ format.nomFormat }}</td>
                    <td class="text-center">{{ format.prixRachatDefaut }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_formats_show', {'id': format.id}) }}">
                            <i class="fa-solid fa-book fa-lg px-1" style="color: #6C757D;" data-toggle="tooltip" title="Consulter ce format"></i></a>
                        <a href="{{ path('app_formats_edit', {'id': format.id}) }}">
                            <i class="fa-solid fa-pen-to-square fa-lg px-1" style="color: #0B759B;" data-toggle="tooltip" title="Modifier ce format"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun format</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

        <a class="btn bg-myPrimary text-white mb-1 mb-5" href="{{ path('app_formats_new') }}">Ajouter un format</a>

    {% endblock %}</main>

    {% include "_footer.html.twig" %}
    
{% endblock %}
