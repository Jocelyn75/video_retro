{% extends 'base.html.twig' %}

{% block title %}<title>Réinitialisation du mot de passe - Video Retro</title>{% endblock %}

{% block body %}

    {% include '_header.html.twig' %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Réinitialiser votre mot de passe</h1>

    <main class="container">{% block main %}

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Si votre adresse email correspond à un compte actif sur Video Retro, vous recevrez un lien de réinitialisation.
                </small>
            </div>

            <button class="btn bg-myPrimary text-white w-100 mt-3 mb-5">Envoyer le mail de réinitialisation</button>
        {{ form_end(requestForm) }}

    {% endblock %}</main>

    {% include "_footer.html.twig" %}
    
{% endblock %}
