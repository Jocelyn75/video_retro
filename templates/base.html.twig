<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block title %}Accueil - Video Retro{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% block stylesheets %}
        {% endblock %}
    </head>

    <body>{% block body %}
        
        {% for notification in app.flashes('success') %}
            <div class="notification alert alert-sucess my2" id="notification">
                <span class="notifMessage">{{ notification|raw }}</span>
            </div>
        {% endfor %}
        
        <main class="container">{% block main %}{% endblock %}</main>

        {% block javascript %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+KEbI7/0KjVl5K44EIlqLsCjM1gk5+1VP4M4Hp4" crossorigin="anonymous"></script>
        <script src="{{ asset('js/tooltip.js') }}"></script>
{% endblock %}

    {% endblock %}
    </body>
</html>